<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rabidraccoon.parcelable.ActivityReceive">

    <TextView
        android:id="@+id/to_caption"
        android:text="@string/to"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/to_received"
        android:layout_below="@id/to_caption"
        android:text="@string/to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/subject_caption"
        android:layout_below="@id/to_received"
        android:text="@string/subject"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/subject_received"
        android:layout_below="@id/subject_caption"
        android:text="@string/subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/message_caption"
        android:layout_below="@id/subject_received"
        android:text="@string/message"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/message_received"
        android:layout_below="@id/message_caption"
        android:text="@string/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/back_btn"
        android:layout_below="@+id/message_received"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="@string/back"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>
